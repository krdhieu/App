<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        />
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        ></script>
        <!-- <script defer src="/src/showHideSideBar.js"></script> -->
        <link rel="stylesheet" href="/css/styles.css" />
        <title>Đổi Mật Khẩu</title>
    </head>
    <body style="background-color: #808080">
        <%- include('navAndSidebar.ejs') -%>
        <div class="container-fluid row mt-3">
            <% if(typeof(alert)!=='undefined') { if(alert==='1'){%>
            <div
                class="alert alert-warning alert-dismissible position-absolute"
            >
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                ></button>
                <strong>Warning!</strong> Mật khẩu hiện tại không chính xác
            </div>
            <%} else if(alert==='2'){%>
            <div
                class="alert alert-warning alert-dismissible position-absolute"
            >
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                ></button>
                <strong>Warning!</strong> Mật khẩu mới không khớp
            </div>
            <%}else if(alert==='0'){%>
            <div
                class="alert alert-success alert-dismissible position-absolute"
            >
                <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                ></button>
                <strong>Success!</strong> Đổi mật khẩu thành công
            </div>

            <%}}%>

            <div class="col-12 text-white">
                <h4>Đổi mật khẩu</h4>
            </div>
            <div class="col-3"></div>
            <div class="col-6">
                <form action="/change-password" method="post">
                    <div class="form-group">
                        <label for="email" class="text-white">Email</label>
                        <input
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            placeholder="Enter email"
                            required
                            readonly
                            value="<%= emailLogin%>"
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="email" class="text-white"
                            >Mật khẩu hiện tại</label
                        >
                        <input
                            type="password"
                            class="form-control"
                            id="email"
                            name="oldPassword"
                            placeholder="Enter Old Password"
                            required
                            maxlength="100"
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="password " class="text-white"
                            >Mật khẩu mới</label
                        >
                        <input
                            type="password"
                            class="form-control"
                            id="password"
                            name="newPassword1"
                            placeholder="New Password"
                            required
                            maxlength="100"
                        />
                    </div>
                    <div class="form-group mt-2">
                        <label for="password" class="text-white"
                            >Xác nhận mật khẩu mới</label
                        >
                        <input
                            type="password"
                            class="form-control"
                            id="password"
                            name="newPassword2"
                            placeholder="Confirm New Password"
                            required
                            maxlength="100"
                        />
                    </div>
                    <button
                        type="submit"
                        class="btn btn-primary col-6 btn-login"
                    >
                        Change
                    </button>
                </form>
            </div>
        </div>
    </body>
</html>
