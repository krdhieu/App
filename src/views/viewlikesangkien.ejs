<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />

    <title>Chi Tiết Sáng Kiến</title>
</head>

<body>
    <%- include('navAndSidebar') -%>
        <h1>Bình chọn sáng kiến</h1>
        <div class="container" style="margin-top: 10px;">
            <div class="row">
                <div class="col-sm-8">
                    <% for( let i=0 ; i < dataSangkien.length; i++){ %>
                        <div class="container" style="border: 1px solid black; margin-bottom: 10px;">
                            <h3>
                                <%= dataSangkien[i].tensangkien %>
                            </h3>
                            <p>
                                Mục tiêu: <%= dataSangkien[i].muctieu %>
                            </p>
                            <p>
                                Nội dung: <%= dataSangkien[i].noidung %>
                            </p>
                            <p>
                                Lợi ích: <%= dataSangkien[i].loiich %>
                            </p>
                            <p>
                                Đối tượng: <%= dataSangkien[i].doituong %>
                            </p>
                            <div class="container row">
                                <div class="col-1">
                                    <form action="/addlike" method="post">
                                        <input type="text" name="masangkien" value="<%= dataSangkien[i].masangkien%>"
                                            readonly hidden>
                                        <button type="submit" class="btn btn-primary"><i
                                                class="fa-regular fa-thumbs-up"></i></button>
                                    </form>
                                </div>
                                <div class="col-11">
                                    <p>
                                        <%= dataSangkien[i].soluong%>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <%}%>
                </div>
                <div class="col-4">
                    <h3>Dot sang kien</h3>
                    <p>
                        <%= dotSangkien.ngaybatdau%>
                    </p>
                    <br>
                    <p>
                        <%= dotSangkien.ngayketthuc%>
                    </p>
                    <br>
                    <p>
                        <%= dotSangkien.ngaydungdangky%>
                    </p>
                    <br>
                    <p>
                        <%=dotSangkien.hannop%>
                    </p>
                </div>
            </div>
        </div>
</body>

</html>