<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Sửa trạng thái sáng kiến</title>
</head>

<body>
    <%- include('navAndSidebar') -%>
        <div class="container">
            <h3>Sửa trạng thái sáng kiến</h3>
            <form action="/uploadtrangthaisangkien" method="post">
                <div class="form-group">
                    <label>Mã trạng thái sáng kiến</label>
                    <input type="text" name="matrangthai" class="form-control"
                        value="<%= dataTrangthaisangkien.matrangthai %>" readonly />
                    <label>Tên trạng thái sáng kiến</label>
                    <input type="text" name="tentrangthai" class="form-control"
                        value="<%= dataTrangthaisangkien.tentrangthai %>" required />
                    <label>Mô tả trạng thái sáng kiến</label>
                    <textarea name="motatrangthai" class="form-control" id="" cols="30" rows="10">
                        <%= dataTrangthaisangkien.motatrangthai %></textarea>
                    <br>
                    <a href="/quanlytrangthaisangkien"><button type="button" class="btn btn-primary">
                            Trở về</button></a>
                    <button type=" submit" class="btn btn-primary float-end">Xác nhận</button>
                </div>
            </form>
        </div>
</body>

</html>