<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        />
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        ></script>
        <!-- <script defer src="/src/showHideSideBar.js"></script> -->
        <link rel="stylesheet" href="/css/styles.css" />
        <title>Quản Lý Phòng Ban</title>
    </head>

    <body>
        <%- include('navAndSidebar') -%>
        <h1>Danh sách phòng ban</h1>
        <button onclick="myfunc()" id="themphongban">Thêm phòng ban</button>
        <div id="themmoiphongban" style="display: none">
            <form action="/addphongban" method="post">
                <!-- Vertical -->
                <div class="form-group">
                    <label>Tên Phòng Ban</label>
                    <input
                        type="text"
                        name="tenphongban"
                        class="form-control"
                        value=""
                        required
                    />
                    <label>Năm thành lập</label>
                    <input
                        type="date"
                        name="ngaythanhlap"
                        max="<%= moment().utcOffset('+0700').format('YYYY-MM-DD'); %>"
                        max="2000-01-01"
                        class="form-control"
                        value=""
                        required
                    />
                    <label>Mô tả phòng ban</label>
                    <textarea
                        name="motaphongban"
                        class="form-control"
                        id=""
                        cols="20"
                        rows="5"
                    ></textarea>
                    <button type=" submit" class="btn btn-primary">
                        Submit
                    </button>
                </div>
            </form>
        </div>
        <script language="javascript">
            function myfunc() {
                if (
                    document.getElementById('themmoiphongban').style.display ==
                    'none'
                ) {
                    document.getElementById('themmoiphongban').style.display =
                        'block';
                    document.getElementById('themphongban').innerHTML = 'Ẩn';
                } else {
                    document.getElementById('themmoiphongban').style.display =
                        'none';
                    document.getElementById('themphongban').innerHTML =
                        'Thêm phòng ban';
                }
            }
        </script>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tên phòng ban</th>
                        <th scope="col">Năm thành lập</th>
                        <th scope="col">Mô tả phòng ban</th>
                        <th scope="col">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let i=0 ; i < dataPhongban.length; i++){ %>
                    <tr>
                        <th scope="row"><%= i +1 %></th>
                        <td><%= dataPhongban[i].tenphongban %></td>

                        <td>
                            <%= moment(dataPhongban[i].ngaythanhlap).format(
                            'DD/MM/YYYY' ) %>
                        </td>

                        <td><%= dataPhongban[i].motaphongban %></td>

                        <td>
                            <a
                                href="/quanlyphongban/sua/<%= dataPhongban[i].maphongban %>"
                                target="_self"
                                title="Sửa phòng ban"
                                ><i class="fa-solid fa-pen"></i
                            ></a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>
