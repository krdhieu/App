<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Quản lý chức vụ</title>
</head>

<body>
    <%- include('navAndSidebar') -%>
        <div class="container-fluid row" style="margin-top: 10px;">
            <div class="col-6">
                <h1>Danh sách chức vụ</h1>
            </div>
            <div class="col-6">
                <button onclick="myfunc()" class="btn btn-primary btn-lg float-end" id="themchucvu"
                    title="Thêm chức vụ" style="height: 50px; width: 50px;"><i class="fa-solid fa-plus"></i></button>
            </div>

        </div>
        <div class="container" id="themmoichucvu" style="display: none;">
            <form action="/addchucvu" method="post">
                <!-- Vertical -->
                <div class="form-group">
                    <label>Tên chức vụ</label>
                    <input type="text" name="tenchucvu" maxlength="100" class="form-control" value="">
                    <label>Mô tả chức vụ</label>
                    <textarea name="motachucvu" class="form-control" id="" cols="30" rows="10"></textarea>
                    <br>
                    <button type=" submit" class="btn btn-primary">Xác nhận</button>
                </div>

            </form>
        </div>
        <script language="javascript">

            function myfunc() {
                if (document.getElementById("themmoichucvu").style.display == 'none') {
                    document.getElementById("themmoichucvu").style.display = 'block';
                    document.getElementById("themchucvu").title = "Ẩn chức vụ"
                }
                else {
                    document.getElementById("themmoichucvu").style.display = 'none';
                    document.getElementById("themchucvu").ititle = "Thêm chức vụ"
                }
            }

        </script>
        <div class="container-fluid">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" width="10%">STT</th>
                        <th scope="col" width="18%">Chức vụ</th>
                        <th scope="col" width="55%">Mô tả chức vụ</th>
                        <th scope="col" width="6%">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- chuc vu -->
                    <% for( let i=0 ; i < dataChucvu.length; i++){ %>
                        <tr>
                            <th scope="row">
                                <%= i +1 %>
                            </th>
                            <td>
                                <%= dataChucvu[i].tenchucvu %>
                            </td>
                            <td>
                                <%= dataChucvu[i].motachucvu %>
                            </td>
                            <td><a href="/quanlychucvu/sua/<%= dataChucvu[i].machucvu %>" class="btn btn-primary"
                                    target="_self" title="Sửa chức vụ"><i class="fa-solid fa-pen"></a></td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
</body>

</html>