<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/scss/styles.scss">
    <title>Sửa Chức vụ hội đồng</title>
</head>

<body>
    <%- include('navAndSidebar') -%>
        <div class="container">
            <h3>Sửa chức vụ hội đồng</h3>
            <form action="/uploadchucvuhd" method="post">

                <!-- Vertical -->
                <div class="form-group">
                    <label>Mã chức vụ hội đồng</label>
                    <input type="text" name="machucvuhd" class="form-control" value="<%= dataChucvuhd.machucvuhd %>"
                        readonly>
                    <label>Tên Chức vụ hội đồng</label>
                    <input type="text" name="tenchucvuhd" maxlength="100" class="form-control"
                        value="<%= dataChucvuhd.tenchucvuhd %>" required>
                    <label>Mô tả chức vụ hội đồng</label>
                    <textarea name="motachucvuhd" class="form-control" id="" cols="30"
                        rows="10"><%= dataChucvuhd.motachucvuhd %></textarea>
                    <br>
                    <a href="/quanlychucvuhd"><button type="button" class="btn btn-primary">
                            Trở về</button></a>
                    <button type=" submit" class="btn btn-primary float-end">Xác nhận</button>
                </div>

            </form>
        </div>
</body>

</html>