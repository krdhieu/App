<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />

    <title>Chi Tiết Sáng Kiến</title>
</head>

<body>
    <%- include('navAndSidebar') -%>
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <h1>Chi tiết sáng kiến <%= dataSangkien.masangkien %>
                    </h1>
                    <label>Tên sáng kiến:</label>
                    <input type="text" name="tensangkien" class="form-control" value="<%= dataSangkien.tensangkien %>"
                        readonly />
                    <!-- <label for="">Người chủ trì</label>
            <input type="text" name="chutri" class="form-control" value="<% %>">
            <label for="">Người trợ lý</label>
            <input type="text" name="troly" class="form-control" value="<% %>"> -->
                    <label for="">Mục tiêu:</label>
                    <input type="text" name="muctieu" class="form-control" value="<%= dataSangkien.muctieu %>"
                        readonly />
                    <label for="">Nội dung:</label>
                    <textarea name="noidung" id="" class="form-control" readonly cols="30" rows="10">
                    <%= dataSangkien.noidung %>
                    </textarea>
                    <label for="">Lợi ích:</label>
                    <input type="text" name="loiich" class="form-control" value="<%= dataSangkien.loiich %>" readonly />
                    <label for="">Đối tượng:</label>
                    <input type="text" name="doituong" class="form-control" value="<%= dataSangkien.doituong %>"
                        readonly />
                </div>
                <!-- gui file  -->
                <div class="col-sm-4" style="margin-top: 40px;">
                    <div class="uploadfile">
                        <form method="post" action="/upload-file" enctype="multipart/form-data">
                            <div>
                                <h4 for="">Upload file PDF : </h4>
                                <input type="file" name="profile_file" />
                            </div>
                            <br>
                            <div>
                                <button type="submit" class="btn btn-primary">Lưu file</button>
                            </div>
                        </form>
                    </div>
                    <br>
                    <!-- nguoi tham gia -->
                    <div>
                        <form action="/settylevaitro" method="post">
                            <!-- mã sáng kiến -->
                            <input type="text" name="masangkien" value="<%= dataSangkien.masangkien %>" readonly hidden>
                            <!-- người chủ trì -->
                            <h3>Người chủ trì</h3>
                            <label for="">Mã nhân viên</label>
                            <input type="text" name="manhanvien1" class="form-control"
                                value="<%= dataChutri.manhanvien %>" readonly />
                            <label for="">Tên nhân viên</label>
                            <input type="text" name="tennhanvien1" class="form-control"
                                value="<%= dataChutri.tennhanvien %>" readonly />
                            <label for="">Tỷ lệ đóng góp</label>
                            <input type="text" name="tyledonggop1" min="0" max="100" class="form-control"
                                value="<%= dataChutri.tyledonggop %>%" />
                            <!-- phụ tá nếu có -->
                            <%if(JSON.stringify(dataTroly)!=null) { %>
                                <h3>Trợ lý</h3>
                                <label for="">Mã nhân viên</label>
                                <input type="text" name="manhanvien2" class="form-control"
                                    value="<%= dataTroly.manhanvien %>" readonly />
                                <label for="">Tên nhân viên</label>
                                <input type="text" name="tennhanvien2" class="form-control"
                                    value="<%= dataTroly.tennhanvien %>" readonly />
                                <label for="">Tỷ lệ đóng góp</label>
                                <input type="text" name="tyledonggop2" min="0" max="100" class="form-control"
                                    value="<%= dataTroly.tyledonggop %>%" />
                                <% } %>
                                    <!-- nút thêm tỷ lệ vai trờ -->
                                    <br>
                                    <button type="submit" class="btn btn-primary">Xác nhận</button>
                        </form>
                    </div>
                    <!-- hết người tham gia -->
                    <!-- <a href="">Xem đánh giá</a> -->
                </div>
            </div>
        </div>
</body>

</html>