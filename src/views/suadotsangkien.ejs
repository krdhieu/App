<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/scss/styles.scss">
    <title>Sửa đợt sáng kiến</title>
</head>

<body>
    <%- include('navAndSidebar') -%>
        <div class="container">
            <h3>Chỉnh sửa đợt sáng kiến</h3>
            <form action="/uploaddotsangkien" method="post">
                <div class="form-group">
                    <label>Mã đợt sáng kiến</label>
                    <input type="text" name="madotsangkien" class="form-control"
                        value="<%=dataDotsangkien.madotsangkien %>" readonly>
                    <label>Tên Đợt</label>
                    <input type="text" name="tendotsangkien" class="form-control"
                        value="<%=dataDotsangkien.tendotsangkien %>" required>
                    <label>Ngày bắt đầu</label>
                    <input type="date" name="ngaybatdau" class="form-control"
                        value="<%= moment(dataDotsangkien.ngaybatdau).format('YYYY-MM-DD') %>" required>
                    <label>Ngày kết thúc</label>
                    <input type="date" name="ngayketthuc" class="form-control"
                        value="<%= moment(dataDotsangkien.ngayketthuc).format('YYYY-MM-DD') %>">
                    <label>Ngày kết thúc đăng ký sáng kiến</label>
                    <input type="date" name="ngaydungdangky" class="form-control"
                        value="<%= moment(dataDotsangkien.ngaydungdangky).format('YYYY-MM-DD') %>" required>
                    <label>Hạn nộp bản báo cáo</label>
                    <input type="date" name="hannop" class="form-control"
                        value="<%= moment(dataDotsangkien.hannop).format('YYYY-MM-DD') %>" required>
                    <!-- submit -->
                    <br>
                    <a href="/quanlydotsangkien"><button type="button" class="btn btn-primary">
                            Trở về</button></a>
                    <button type=" submit" class="btn btn-primary float-end">Xác nhận</button>
                    <a href="/ketthucdot"><button type="button" class="btn btn-primary float-end"
                            style="background-color: red; margin-right: 20px;">
                            Kết thúc đợt</button></a>
                </div>
            </form>
            <form action="" method="get">
                <button type="submit"></button>
            </form>
        </div>
</body>

</html>