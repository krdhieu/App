<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/scss/styles.scss">
    <title>Sửa đợt sáng kiến</title>
</head>

<body>
    <div>
        <h1>Chỉnh sửa đợt sáng kiến</h1>
        <form action="/uploaddotsangkien" method="post">
            <div class="form-group">
                <label>Mã đợt sáng kiến</label>
                <input type="text" name="madotsangkien" class="form-control" value="<%=dataDotsangkien.madotsangkien %>"
                    readonly>
                <label>Tên Đợt</label>
                <input type="text" name="tendotsangkien" class="form-control"
                    value="<%=dataDotsangkien.tendotsangkien %>" required>
                <label>Ngày bắt đầu</label>
                <input type="date" name="ngaybatdau" class="form-control"
                    value="<%= moment(dataDotsangkien.ngaybatdau).format('YYYY-MM-DD') %>" required>
                <label>Ngày kết thúc</label>
                <input type="date" name="ngayketthuc" class="form-control"
                    value="<%= moment(dataDotsangkien.ngayketthuc).format('YYYY-MM-DD') %>">
                <label>Ngày kết thúc đăng ký sáng kiến</label>
                <input type="date" name="ngaydungdangky" class="form-control"
                    value="<%= moment(dataDotsangkien.ngaydungdangky).format('YYYY-MM-DD') %>" required>
                <label>Hạn nộp bản báo cáo</label>
                <input type="date" name="hannop" class="form-control"
                    value="<%= moment(dataDotsangkien.hannop).format('YYYY-MM-DD') %>" required>
                <!-- submit -->
                <button type=" submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        <form action="/ketthucdot" method="get">
            <button type="submit">Kết thúc đợt</button>
        </form>
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    </div>
</body>

</html>