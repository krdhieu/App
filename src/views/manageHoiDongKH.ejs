<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        />
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        ></script>
        <script src="/src/downloadReport.js"></script>
        <title>Manage Account</title>
    </head>
    <body style="background-color: #808080">
       
        <!-- sidebar -->
        <%- include('navAndSidebar.ejs') -%>
        <div class="container-fluid mb-0">
            <h1 class="mb-0 text-white">Danh sách Hội đồng</h1>
        </div>
        <div class="container-fluid row mb-0">
            <div class="col-11">
                
            </div>
            <div class="col-sm-1 mt-3">
                <a href="/get-create-hdkh" class="btn btn-primary mb-3 mr-sm-3" >Add new</a>
            </div>
        </div>
        <div class="container-fluid mt-1 ">
            <table class="table table-dark text-center" id="detailHDKH">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Mã Hội đồng</th>
                    <th scope="col">Năm thành lập</th>
                    <th scope="col">Trạng thái</th>
                    <th scope="col" width="200px">Actions</th>
                  </tr>
                </thead>
                <tbody>
                    <% for(let i=0;i<allHDKH.length;i++){%>
                  <tr>
                    <th scope="row"><%=i+1%></th>
                    <td><%=allHDKH[i].mahoidong%></td>
                    <td><%= moment(allHDKH[i].ngaythanhlap).format('DD/MM/YYYY'); %></td>
                    <td><%=(allHDKH[i].trangthai===1?'Đang trong nhiệm kỳ':'Đã kết thúc nhiệm kỳ')%></td>
                    <td>
                        <% if(allHDKH[i].trangthai === 1){%>
                        <a href="/get-edit-hdkh?id=<%=allHDKH[i].mahoidong%>" class="btn btn-primary "  data-bs-toggle="tooltip" title="Sửa thông tin hội đồng"><i class="fa-solid fa-pen"></i></a>
                        <% } %>
                        <a href="/get-detail-hdkh?id=<%=allHDKH[i].mahoidong%>" class="btn btn-primary "  data-bs-toggle="tooltip" title="Chi tiết hội đồng"><i class="fa-solid fa-file-lines"></i></a>
                    </td>
                  </tr>
                  <%}%>
                </tbody>
              </table>
        </div>
        
    </body>
</html>
