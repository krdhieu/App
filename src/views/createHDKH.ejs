<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        />
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        ></script>
        <!-- <script defer src="/src/showHideSideBar.js"></script> -->
        <link rel="stylesheet" href="/css/styles.css" />
        <title>Thành Lập Hội Đồng</title>
    </head>

    <body class="mycolor-gray">
        <% if(typeof(alert)!=='undefined' ){ if(alert==='1' ){%>
        <div
            class="alert alert-warning position-absolute alert-dismissible fade show"
            style="z-index: 1"
        >
            <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
            ></button>
            <strong>Warning!</strong> Không thể thêm mới khi có Hội đồng đang
            trong nhiệm kỳ
        </div>
        <%} else if(alert==='0' ){%>
        <div
            class="alert alert-success position-absolute alert-dismissible fade show"
            style="z-index: 1"
        >
            <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
            ></button>
            <strong>Success!</strong> Thêm thành công
        </div>
        <%}%> <%}%> <%- include('navAndSidebar.ejs') -%>
        <!--/////////////////////////////////////////////////////-->

        <div class="container-fluid row mt-3 position-relative">
            <!-- thongbao -->

            <!--///////-->
            <div class="col-12 text-white">
                <h4>Thêm mới Hội đồng khoa học</h4>
            </div>
            <form action="/create-hdkh" method="post" class="col-12 mt-3">
                <div class="form-group col-4">
                    <label for="ngayThanhLap" class="text-white">
                        <h5>Ngày thành lập</h5>
                    </label>
                    <input
                        type="date"
                        name="ngayThanhLap"
                        required
                        class="form-control"
                    />
                </div>
                <div class="form-group mt-4">
                    <label for="nhiemVu" class="text-white">
                        <h5>Nhiệm vụ</h5>
                    </label>
                    <textarea
                        name="nhiemVu"
                        id="nhiemVu"
                        cols="30"
                        rows="15"
                        class="form-control"
                    >
                    </textarea>
                </div>

                <div>
                    <button
                        type="submit"
                        class="btn btn-primary mt-2"
                        ata-bs-toggle="tooltip"
                        title="Lưu"
                    >
                        Save
                    </button>
                </div>
            </form>
        </div>
    </body>
</html>
