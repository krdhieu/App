    <!--/////////////////////////////////////////////////////-->

    <div class="container-fluid row mt-3 position-relative">
        <!-- thongbao -->
        <% if(typeof(alert)!=='undefined' ){ if(alert==='1' ){%>
            <div class="alert alert-warning position-absolute alert-dismissible fade show">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong>Warning!</strong> Không thể thêm mới khi có Hội đồng
                đang trong nhiệm kỳ
            </div>
            <%} else if(alert==='0' ){%>
                <div class="alert alert-success position-absolute alert-dismissible fade show">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>Success!</strong> Thêm thành công
                </div>
                <%}%>
                    <%}%>
                        <!--///////-->
                        <div class="col-12 text-white">
