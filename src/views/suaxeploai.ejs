<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Sửa xếp loại</title>
</head>

<body>
    <%- include('navAndSidebar') -%>
        <div class="container">
            <h3>Sửa xếp loại</h3>
            <form action="/uploadxeploai" method="post">

                <!-- Vertical -->
                <div class="form-group">
                    <label>mã xếp loại</label>
                    <input type="text" name="maxeploai" class="form-control" value="<%= dataXeploai.maxeploai %>"
                        readonly>
                    <label>Tên xếp loại</label>
                    <input type="text" name="tenxeploai" class="form-control" value="<%= dataXeploai.tenxeploai %>"
                        required>
                    <label for="">Mô tả xếp loại</label>
                    <textarea name="motaxeploai" class="form-control" id="" cols="30"
                        rows="10"><%= dataXeploai.motaxeploai %></textarea>
                    <br>
                    <a href="/quanlyxeploai"><button type="button" class="btn btn-primary">
                            Trở về</button></a>
                    <button type=" submit" class="btn btn-primary float-end">Xác nhận</button>
                </div>

            </form>
        </div>
</body>

</html>