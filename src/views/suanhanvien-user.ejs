<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/scss/styles.scss">
    <title>Sửa nhân viên</title>
</head>

<body>
    <div>
        <form action="/uploadnhanvien-user" method="post">

            <!-- Vertical -->
            <div class="form-group">
                <!-- ID -->
                <label>Mã nhân viên</label>
                <input type="text" name="manhanvien" class="form-control" value="<%= dataNhanvien.manhanvien %>"
                    readonly>
                <label>Trình độ học vấn</label>
                <input type="text" name="trinhdohocvan" class="form-control" value="<%= dataNhanvien.trinhdohocvan %>">
                <!-- Tên nhân viên  -->
                <label>Tên nhân viên</label>
                <input type="text" name="tennhanvien" required class="form-control"
                    value="<%= dataNhanvien.tennhanvien %>">
                <!-- Giới tính  -->
                <label>Giới tính</label> <br>
                <select name="gioitinh" class="form-control" value>
                    <option value="1">Nam</option>
                    <option value="0">Nữ</option>
                </select>
                <!-- Năm sinh  -->
                <label>Ngày sinh</label>
                <input type="date" name="ngaysinh" class="form-control"
                    value="<%=String(moment(dataNhanvien.ngaysinh).format('YYYY-MM-DD'));%>" min="1950-01-01"
                    max="2006-01-01" required>
                <!-- Ngày vào làm  -->
                <label>Ngày vào làm</label>
                <input type="date" name="ngayvaolam" class="form-control"
                    value="<%=String(moment(dataNhanvien.ngayvaolam).format('YYYY-MM-DD'));%>" min="2000-01-01"
                    max="<%= moment().utcOffset('+0700').format('YYYY-MM-DD'); %>" value="" required>
                <!-- Số điện thoại  -->
                <label>Số điện thoại</label>
                <input type="text" name="sdt" class="form-control" value="<%= dataNhanvien.sdt %>" maxlength="10"
                    minlength="10" required>
                <!-- Submit -->
                <button type=" submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</body>

</html>