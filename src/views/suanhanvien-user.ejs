<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/scss/styles.scss">
    <title>Sửa nhân viên</title>
</head>

<body>
    <div>
        <form action="/uploadnhanvien-user" method="post">

            <!-- Vertical -->
            <div class="form-group">
                <!-- ID -->
                <label>Mã nhân viên</label>
                <input type="text" name="manhanvien" class="form-control" value="<%= dataNhanvien.manhanvien %>"
                    readonly>
                <label>Trình độ học vấn</label>
                <input type="text" name="trinhdohocvan" class="form-control" value="<%= dataNhanvien.trinhdohocvan %>">
                <!-- Tên nhân viên  -->
                <label>Tên nhân viên</label>
                <input type="text" name="tennhanvien" required class="form-control"
                    value="<%= dataNhanvien.tennhanvien %>">
                <!-- Giới tính  -->
                <label>Giới tính</label> <br>
                <select name="gioitinh" class="form-control" value>
                    <option value="1">Nam</option>
                    <option value="0">Nữ</option>
                </select>
                <!-- Năm sinh  -->
                <label>Ngày sinh</label>
                <input type="date" name="ngaysinh" class="form-control"
                    value="<%=String(moment(dataNhanvien.ngaysinh).format('YYYY-MM-DD'));%>" min="1950-01-01"
                    max="2006-01-01" required>
                <!-- Ngày vào làm  -->
                <label>Ngày vào làm</label>
                <input type="date" name="ngayvaolam" class="form-control"
                    value="<%=String(moment(dataNhanvien.ngayvaolam).format('YYYY-MM-DD'));%>" min="2000-01-01"
                    max="<%= moment().utcOffset('+0700').format('YYYY-MM-DD'); %>" value="" required>
                <!-- Số điện thoại  -->
                <label>Số điện thoại</label>
                <input type="text" name="sdt" class="form-control" value="<%= dataNhanvien.sdt %>" maxlength="10"
                    minlength="10" required>
                <!-- Submit -->
                <button type=" submit" class="btn btn-primary">Submit</button>
            </div>
        </form>

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    </div>
</body>

</html>