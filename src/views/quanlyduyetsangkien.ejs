<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        />
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        ></script>
        <!-- <script defer src="/src/showHideSideBar.js"></script> -->
        <link rel="stylesheet" href="/css/styles.css" />
        <title>Quản Lý Sáng Kiến</title>
    </head>

    <body>
        <%- include('navAndSidebar') -%>
        <div>
            <h1>Danh sách sáng kiến</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Tên sáng kiến</th>
                        <th scope="col">Mục tiêu</th>
                        <!-- <th scope="col">Nội dung</th> -->
                        <th scope="col">Lợi ích</th>
                        <th scope="col">Đối tượng</th>
                        <!-- <th scope="col">Đợt</th> -->
                        <th scope="col">Trạng thái</th>
                        <!-- <th scope="col">Đính kèm</th> -->
                        <th scope="col">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let i=0 ; i < dataSangkien.length; i++){ %>
                    <tr>
                        <th scope="row"><%= i +1 %></th>
                        <td><%= dataSangkien[i].tensangkien %></td>
                        <td><%= dataSangkien[i].muctieu %></td>
                        <td><%= dataSangkien[i].loiich %></td>
                        <td><%= dataSangkien[i].doituong %></td>
                        <td><%= dataSangkien[i].tentrangthai %></td>
                        <td>
                            <a
                                href="/quanlysangkien/duyet/<%= dataSangkien[i].masangkien %>"
                                target="_self"
                                title="Duyệt sáng kiến"
                                ><i class="fa-solid fa-pen-to-square"></i
                            ></a>
                            <a
                                href="/quanlysangkien/huy/<%= dataSangkien[i].masangkien %>"
                                target="_self"
                                title="Hủy sáng kiến"
                                ><i class="fa-solid fa-ban"></i
                            ></a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </body>
</html>
