    <%- include('navAndSidebar') -%>
        <div>
            <h1>Danh sách trạng thái sáng kiến</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col">Mô tả trạng thái</th>
                        <th scope="col" width="6%">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let i=0 ; i < dataTrangthaisangkien.length; i++){ %>
