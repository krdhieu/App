                            <th scope="row">
                                <%= i +1 %>
                            </th>
                            <td>
                                <%= dataTrangthaisangkien[i].tentrangthai %>
                            </td>
                            <td>
                                <%= dataTrangthaisangkien[i].motatrangthai %>
                            </td>
                            <td><a href="/quanlytrangthaisangkien/sua/<%= dataTrangthaisangkien[i].matrangthai %>"
                                    class="btn btn-primary" target="_self" title="Sửa trạng thái sáng kiến"><i
                                        class="fa-solid fa-pen"></a></td>
                        </tr>
                        <% } %>
                </tbody>
            </table>

