    <body>
        <div>
            <h1>Thêm mới sáng kiến</h1>
            <form action="/addsangkien" method="post">
                <!-- Vertical -->
                <div class="form-group">
                    <!-- Tên sáng kiến -->
                    <label>Tên sáng kiến</label>
                    <input
                        type="text"
                        name="tensangkien"
                        class="form-control"
                        value=""
                        required
                    />
                    <!-- muctieu  -->
                    <label>Mục tiêu</label>
                    <input
                        type="text"
                        name="muctieu"
                        class="form-control"
                        value=""
                        required
                    />
                    <!-- noidung  -->
                    <label>Nội dung</label>
                    <br />
                    <textarea
                        name="noidung"
                        id="noidung"
                        cols="80"
                        rows="5"
                        required
                    ></textarea>
                    <br />
                    <!-- loiich  -->
                    <label>Lợi ích</label>
                    <input
                        type="text"
                        name="loiich"
                        class="form-control"
                        value=""
                        required
                    />
                    <!-- doituong  -->
                    <label>Đối tượng</label>
                    <input
                        type="text"
                        name="doituong"
                        class="form-control"
                        value=""
                        required
                    />
                </div>
                <div class="nguoithamgia_2" id="troly">
                    <label>Mã trợ lý</label>
                    <input
                        type="text"
                        name="manhanvien_2"
                        class="form-control"
                        hiddenvalue="null"
                    />
                </div>
                <!-- Submit -->
                <br />
                <button type=" submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
