<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        />
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        ></script>
        <script defer src="/src/refreshNotifySuaDiem.js"></script>

        <link rel="stylesheet" href="/css/styles.css"/>
        <title>Document</title>
    </head>
    <body>
        <div class="container-fluid row main-container">
            <div class="col-3 ntg-container  ">
                <h4 class="text-center">Người tham gia sáng kiến</h4>
                <% for(let i=0;i<nguoiThamGia.length;i++){%>
                    <div>Ma nhan vien: <%= nguoiThamGia[i].manhanvien%></div>
                    <div>Ten Nhan Vien: <%= nguoiThamGia[i].tennhanvien%></div>
                    <div>Vai Tro: <%= (nguoiThamGia[i].vaitro===0?'Nguoi Tham Gia':'Chu Tri')%></div>   
                <%}%>
            </div>
            <div class="col-8 sk-container offset-1">
                <h4 class="text-center">Chi tiết sáng kiến</h4>
                <div>Tên sáng kiến: <%=detailSangKien.tensangkien%></div>
                <div>Mục tiêu sáng kiến: <%=detailSangKien.muctieu%></div>
                <div>Nội dung sáng kiến: <%=detailSangKien.noidung%></div>
                <div>Đánh giá lợi ích thu được: <%=detailSangKien.loiich%></div>
                <div>File chi tiết đính kèm:    <a href="/download/file?filename=<%=detailSangKien.dinhkem%>" target="_blank">Xem file đính kèm</a></div>
            </div>
            <%if(typeof showDiemDaCham ==='undefined' ){%>
            <div class="row text-center">
                <h4>Chấm điểm</h4>
                <form action="/create-chitiet-chamdiem" method="post" class="row">
                    <input type="text" value="<%=detailSangKien.masangkien%>"  class="form-control" name="sangKienId">
                    <input type="text" value="<%=thanhVienHDDaDangNhap.mathanhvien%>" class="form-control" name="thanhVienHDId">
                    <div class="col-3">
                        <label for="">Điểm mục đích</label>
                        <input type="number" step="0.1" name="diemMucDich" 
                            class="form-control input-diem mucdich" required min="0" max="10">
                    </div>
                    <div class="col-3">
                        <label for="">Điểm nội dung</label>
                        <input type="number" step="0.1" name="diemNoiDung" 
                            class="form-control input-diem noidung" required min="0" max="10">
                    </div>
                    <div class="col-3">
                        <label for="">Điểm ứng dụng</label>
                        <input type="number" step="0.1" name="diemUngDung" 
                            class="form-control input-diem ungdung" required min="0" max="10">
                    </div>
                   <div class="col-3">
                        <label for="">Điểm trình bày</label>
                        <input type="number" step="0.1" name="diemTrinhBay" 
                            class="form-control input-diem trinhbay" required min="0" max="10">
                   </div>
                   <div class="col-12 row mt-3">
                       <div class="col-8"></div>
                        <button type="submit" class="btn btn-success col-4 me-0">Save</button>
                   </div>
                </form>
            </div>
            <%}%>
        </div>
        <%if(typeof showDiemDaCham !=='undefined' ){%>
        <div class="row text-center">
            <h4>Sửa điểm</h4>
            <form action="/edit-chitiet-chamdiem" method="post" class="row">
                <input type="text" value="<%=showDiemDaCham[0].masangkien%>"  class="form-control " name="sangKienId">
                <input type="text" value="<%=showDiemDaCham[0].mathanhvien%>" class="form-control " name="thanhVienHDId">
                <div class="col-3">
                    <label for="">Điểm mục đích</label>
                    <input type="number" step="0.1" name="diemMucDich" 
                        class="form-control input-diem mucdich" required min="0" max="10" 
                        value="<%=showDiemDaCham[0].diem_muc_dich%>"
                        >
                </div>
                <div class="col-3">
                    <label for="">Điểm nội dung</label>
                    <input type="number" step="0.1" name="diemNoiDung" 
                        class="form-control input-diem noidung" required min="0" max="10"
                        value="<%=showDiemDaCham[0].diem_noi_dung%>">
                </div>
                <div class="col-3">
                    <label for="">Điểm ứng dụng</label>
                    <input type="number" step="0.1" name="diemUngDung" 
                        class="form-control input-diem ungdung" required min="0" max="10"
                        value="<%=showDiemDaCham[0].diem_ung_dung%>">
                </div>
               <div class="col-3">
                    <label for="">Điểm trình bày</label>
                    <input type="number" step="0.1" name="diemTrinhBay" 
                        class="form-control input-diem trinhbay" required min="0" max="10"
                        value="<%=showDiemDaCham[0].diem_trinh_bay%>">
               </div>
               <div class="col-12 row mt-3">
                   <div class="col-8"></div>
                    <button type="submit" class="btn btn-success col-4 me-0">Save</button>
               </div>
            </form>
        </div>
        <%}%>
        <div class="notification-success" ><%= (typeof message !=='undefined' ? message:'')%></div>
    </div>





    <% if(nhanXet.length!==1){%>
    <div class="container-fluid">
        <div>Thêm nhận xét</div>
        <form action="/create-nhanxet" method="post">
            sangkien
            <input type="text"  value="<%=detailSangKien.masangkien%>"   name="maSangKien" class="form-control" readonly>
            <input type="text"  value="<%=thanhVienHDDaDangNhap.mathanhvien%>"  name="maThanhVien" class="form-control" readonly>
            <input type="text" name="nhanXet" class="form-control">
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <%} else {%>
    <div class="container-fluid">
        <div>Sửa nhận xét</div>
        <form action="/edit-nhanxet" method="post">
            sangkien
            <input type="text"  value="<%=detailSangKien.masangkien%>"  name="maSangKien" class="form-control" readonly>
            <input type="text"  value="<%=thanhVienHDDaDangNhap.mathanhvien%>"  name="maThanhVien" class="form-control" readonly>
            <input type="text" name="nhanXet" class="form-control" value="<%=nhanXet[0].noidung%>">
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
    <%}%>
    
    </body>
</html>
