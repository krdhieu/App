<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        />
        <script
            defer
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        ></script>
        <script src="/src/downloadReport.js"></script>
        <!-- <script defer src="/src/showHideSideBar.js"></script> -->
        <link rel="stylesheet" href="/css/styles.css" />
        <title>Tất Cả Sáng Kiến Xếp Loại</title>
    </head>
    <body style="background-color: #808080">
        <!-- sidebar -->

        <%- include('navAndSidebar.ejs') -%>

        <div class="container-fluid mb-0">
            <h1 class="mb-0 text-white">Tất cả xếp loại sáng kiến</h1>
        </div>
        <div class="container-fluid row mt-3">
            <form action="/tatcaxeploai" class="col-3" method="get" >
                <select name="maDotTimKiem" class="form-select">
                    <option value="">Tất Cả Các Đợt</option>
                    <% for (let i=0;i<allDot.length;i++){%>
                            <option value="<%=allDot[i].madotsangkien%>"><%=allDot[i].tendotsangkien%></option>
                        <%}%>
                </select>
                <button type="submit" class="btn btn-info mt-1">Tìm Kiếm</button>
            </form>
        </div>
        <div class="container-fluid mt-3 ">
            <table class="table table-dark text-center" id="diemTrungBinh">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Mã Sáng Kiến</th>
                    <th scope="col">Tên Sáng Kiến</th>
                    <th scope="col">Đợt Sáng Kiến</th>
                    <th scope="col">Điểm Trung Bình <br> Mục Đích</th>
                    <th scope="col">Điểm Trung Bình <br> Nội Dung</th>
                    <th scope="col">Điểm Trung Bình <br> Ứng Dụng</th>
                    <th scope="col">Điểm Trung Bình <br> Trình Bày</th>
                    <th scope="col">Xếp Loại</th>
                  </tr>
                </thead>
                <tbody>
                    <% for(let i=0;i<tatCaThongTin.length;i++){%>
                  <tr>
                    <th scope="row"><%=i + 1%></th>
                    <td><%=tatCaThongTin[i].sangKien.masangkien%></td>
                    <td><%=tatCaThongTin[i].sangKien.tensangkien%></td>
                    <td><%=tatCaThongTin[i].sangKien.tendotsangkien%></td>
                    <td><%=(tatCaThongTin[i].diem.tbmucdich===null? '' :  (tatCaThongTin[i].diem.tbmucdich.toFixed(2)))%></td>
                    <td><%=(tatCaThongTin[i].diem.tbnoidung===null? '' :  (tatCaThongTin[i].diem.tbnoidung.toFixed(2)))%></td>
                    <td><%=(tatCaThongTin[i].diem.tbungdung===null? '' :  (tatCaThongTin[i].diem.tbungdung.toFixed(2)))%></td>
                    <td><%=(tatCaThongTin[i].diem.tbtrinhbay===null? '':  (tatCaThongTin[i].diem.tbtrinhbay.toFixed(2)))%></td>
                    <td><%=(tatCaThongTin[i].sangKien.tenxeploai===null? '':  (tatCaThongTin[i].sangKien.tenxeploai))%></td>
                   
                  </tr>
                  <%}%>
                </tbody>
              </table>

              <div class="container-fluid p-0">
                <button class="btn btn-primary" onclick="fnExcelReport('diemTrungBinh');">Export Excel</button>
             </div>
    </body>
</html>
