<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/scss/styles.scss" />
    <title>Sửa phòng ban</title>
</head>

<body>
    <%- include('navAndSidebar') -%>
        <div class="container">
            <h3>Sửa phòng ban</h3>
            <form action="/uploadphongban" method="post">
                <!-- Vertical -->
                <div class="form-group">
                    <label>Mã phòng ban</label>
                    <input type="text" name="maphongban" class="form-control" value="<%= dataPhongban.maphongban %>"
                        readonly />
                    <label>Tên Phòng Ban</label>
                    <input type="text" name="tenphongban" class="form-control" value="<%= dataPhongban.tenphongban %>"
                        required />
                    <label>Năm thành lập</label>
                    <input type="date" name="namthanhlap" id="namthanhlap" class="form-control"
                        value="<%=moment(dataPhongban.ngaythanhlap).format( 'YYYY-MM-DD' )%>" required />
                    <label>Mô tả phòng ban</label>
                    <textarea name="motaphongban" class="form-control" id="" cols="30"
                        rows="10"><%= dataPhongban.motaphongban %></textarea>
                    <br>
                    <a href="/quanlyphongban"><button type="button" class="btn btn-primary">
                            Trở về</button></a>
                    <button type=" submit" class="btn btn-primary float-end">
                        Xác nhận</button>

                </div>
            </form>
        </div>
</body>

</html>