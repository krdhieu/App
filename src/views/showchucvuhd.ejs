<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script defer src="/src/showHideSideBar.js"></script> -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/scss/styles.scss">
    <title>Quản lý chức vụ</title>
</head>

<body>
    <div>
        <h1>Danh sách chức vụ</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Chức vụ hội đồng </th>
                    <th scope="col">Mô tả chức vụ hội đồng</th>
                    <th scope="col">Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                <% for( let i=0 ; i < dataChucvuhd.length; i++){ %>
                    <tr>
                        <th scope="row">
                            <%= i +1 %>
                        </th>
                        <td>
                            <%= dataChucvuhd[i].tenchucvuhd %>
                        </td>
                        <td>
                            <%= dataChucvuhd[i].motachucvuhd %>
                        </td>
                        <td><a href="/quanlychucvuhd/sua/<%= dataChucvuhd[i].machucvuhd %>" target="_self"
                                title="Sửa chức vụ hội đồng"><i class="fa-solid fa-pen"></a></td>
                    </tr>
                    <% } %>
            </tbody>
        </table>

        <h1>Thêm mới chức vụ</h1>
        <form action="/addchucvuhd" method="post">
            <!-- them chuc vu hoi dong -->
            <div class="form-group">
                <label>Tên chức vụ hội đồng</label>
                <input type="text" name="tenchucvu" maxlength="100" class="form-control" value="">
                <label for="">Mô tả chức vụ hội đồng</label>
                <textarea name="motachucvuhd" id="" cols="30" rows="10"></textarea>
                <button type=" submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div>
</body>

</html>